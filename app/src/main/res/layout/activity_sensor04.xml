<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sensor04">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toollbarSensor04"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:paddingStart="5dp"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toollbarSensor04"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/TelaViewScroll04"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textoSensor03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="50dp"
                android:fontFamily="@font/roboto_bold"
                android:text="TDS"
                android:textColor="@color/black"
                android:textSize="40sp">
            </TextView>
            <HorizontalScrollView
                android:id="@+id/botoesSensoresNewSensor02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="50dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/adicionarNovoSensor04"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="15dp"
                        android:onClick="irTelaAdicionaSensorTDS"
                        android:backgroundTint="@color/corBotaoFAB"
                        android:src="@drawable/ic_baseline_add_24">
                    </com.google.android.material.floatingactionbutton.FloatingActionButton>

                    <Button
                        android:id="@+id/TelaTDS_SensorTemperatura"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="1dp"
                        android:backgroundTint="@color/cinza_100"
                        android:text="Sensor 1"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:cornerRadius="40dp"
                        android:onClick="irTelaTemperatura"
                        >
                    </Button>
                    <Button
                        android:id="@+id/TelaTDS_SensorPH"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="1dp"
                        android:backgroundTint="@color/cinza_100"
                        android:text="Sensor 2"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:cornerRadius="40dp"
                        android:onClick="irTelaPH">
                    </Button>
                    <Button
                        android:id="@+id/TelaTDS_SensorTurbidez"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="1dp"
                        android:backgroundTint="@color/cinza_100"
                        android:text="Sensor 3"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:cornerRadius="40dp"
                        android:onClick="irTelaTurbidez"
                        >
                    </Button>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/TextoPrevisaoSensorNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="50dp"
                android:text="PrevisÃ£o Sensor: "
                android:textColor="@color/cinza_100"
                android:textSize="24sp">
            </TextView>
            <TextView
                android:id="@+id/resultadoSensor04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:textSize="40sp">
            </TextView>
            <Button
                android:id="@+id/AtualizarTb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/bc_button"
                android:text="Atualizar "
                android:onClick="atualizarTDS"
                android:textColor="@color/azul_claro300"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp">
            </Button>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>